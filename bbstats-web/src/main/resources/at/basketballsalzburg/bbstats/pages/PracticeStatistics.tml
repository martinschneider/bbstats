<html t:id="pageLayout"
	t:type="pageLayout"
	xmlns:p="tapestry:parameter"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd">
	
	<t:box t:id="datesBox">
		<t:form t:id="form" class="form-horizontal" role="form">
			<div class="form-group">
				<t:label for="fromDateField" class="col-md-2"/>
				<t:datetimefield t:id="fromDateField" class="form-control" />
			</div>
			<div class="form-group">
				<t:label for="toDateField" class="col-md-2"/>
				<t:datetimefield t:id="toDateField" class="form-control" />
			</div>
			<button t:id="submit" class="btn btn-default">${message:refresh}</button>
		</t:form>
	</t:box>
	
	<t:zone t:id="resultsZone">
		<div class="row">
			<div class="col-sm-6 col-md-3">
				<t:box t:id="playersBox">
					<t:grid t:id="playerPracticeGrid" class="table-striped table-condensed">
						<p:nameCell>
							<t:pagelink page="player" context="${playerPractice.id}">${playerPractice.lastname}
								${playerPractice.firstname}</t:pagelink>
						</p:nameCell>
					</t:grid>
				</t:box>
			</div>
			<div class="col-sm-6 col-md-3">
				<t:box t:id="coachesBox">
					<t:grid t:id="coachPracticeGrid" class="table-striped table-condensed">
						<p:nameCell>
							<t:pagelink page="coach" context="${coachPractice.id}">${coachPractice.lastname} ${coachPractice.firstname}</t:pagelink>
						</p:nameCell>
					</t:grid>
				</t:box>
			</div>
			<div class="col-sm-6 col-md-3">
				<t:box t:id="ageGroupsBox">
					<t:grid t:id="ageGroupPracticeGrid" class="table-striped table-condensed" />
				</t:box>
			</div>
			<div class="col-sm-6 col-md-3">
				<t:box t:id="gymsBox">
					<t:grid t:id="gymPracticeGrid" class="table-striped table-condensed">
						<p:fullNameCell>${gymPractice.name} ${gymPractice.city}</p:fullNameCell>
					</t:grid>
				</t:box>
			</div>
		</div>
	</t:zone>
</html>
